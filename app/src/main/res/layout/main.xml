<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:id="@+id/mainLayout">
<TextView  
    android:layout_height="wrap_content" 
    android:text="@string/hello" android:gravity="center" android:textSize="24dp" android:layout_marginTop="10dp" android:layout_width="wrap_content" android:layout_gravity="center" android:textColor="#ddffffff"/>






<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginTop="10dp" android:background="@layout/roundcorner" android:layout_marginLeft="4sp" android:layout_marginRight="4sp" android:id="@+id/LinearLayout01"><EditText android:layout_height="wrap_content" android:id="@+id/searchtxt" android:layout_marginLeft="20dp" android:layout_width="wrap_content" android:layout_weight="0.8" android:layout_marginTop="4sp" android:hint="lettres" android:imeOptions="actionSearch"></EditText>
	<ImageButton android:layout_height="wrap_content" android:src="@drawable/ic_btn_search" android:layout_width="wrap_content" android:layout_marginRight="20dp" android:id="@+id/buttonSearch" android:layout_marginTop="4sp"></ImageButton>
</LinearLayout>

<LinearLayout android:id="@+id/LinearLayout01" android:layout_width="fill_parent" android:layout_marginLeft="4sp" android:layout_marginRight="4sp" android:layout_marginTop="10sp" android:orientation="vertical" android:background="@layout/roundcorner" android:layout_height="wrap_content">
	<TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/aide" android:textColor="#ffffffff" android:layout_marginLeft="10sp" android:layout_marginBottom="10sp" android:layout_marginTop="10sp">
</TextView>

</LinearLayout>

<LinearLayout 
		android:id="@+id/LinearLayout04" android:layout_width="fill_parent" android:layout_marginLeft="4sp" 
		android:layout_marginRight="4sp" android:layout_marginTop="10sp" android:orientation="vertical" android:background="@layout/roundcorner" 
		android:layout_height="wrap_content">
		
	<TextView 
		android:id="@+id/textseekmin" android:layout_width="wrap_content" 
		android:layout_height="wrap_content" android:text="@string/txtnbmin" android:textColor="#ffffffff" 
		android:layout_marginLeft="10sp" android:layout_marginTop="10sp">
	</TextView>
	
	<LinearLayout android:id="@+id/LinearLayout02" android:layout_width="fill_parent" android:orientation="horizontal" android:layout_height="wrap_content"><SeekBar android:id="@+id/SeekBarMin" android:layout_height="wrap_content" android:layout_marginLeft="10sp" android:layout_marginRight="10sp" android:layout_marginTop="5sp" android:layout_width="fill_parent" android:layout_weight="0.5" android:max="0" android:progress="0" android:paddingLeft="10sp" android:paddingRight="10sp"></SeekBar><TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:textColor="#ffffff" android:layout_marginTop="10sp" android:id="@+id/textmin" android:layout_weight="5" android:text="0"></TextView>
</LinearLayout>
	
	<TextView 
		android:id="@+id/textseekmin" android:layout_width="wrap_content" 
		android:layout_height="wrap_content" android:text="@string/txtnbmax" android:textColor="#ffffffff" 
		android:layout_marginLeft="10sp" android:layout_marginTop="10sp">
	</TextView>
	
	<LinearLayout android:id="@+id/LinearLayout03" android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="horizontal"><SeekBar android:id="@+id/SeekBarMax" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginLeft="10sp" android:layout_marginRight="10sp" android:layout_marginBottom="10sp" android:layout_marginTop="5sp" android:layout_weight="0.5" android:max="0" android:progress="0" android:paddingLeft="10sp" android:paddingRight="10sp"></SeekBar><TextView android:layout_height="wrap_content" android:textColor="#ffffff" android:layout_marginTop="10sp" android:layout_width="fill_parent" android:layout_weight="5" android:id="@+id/textmax" android:text="0"></TextView>
</LinearLayout>




</LinearLayout>



</LinearLayout>
